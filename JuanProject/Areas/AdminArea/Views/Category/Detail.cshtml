@model CategoryDetailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align:center" class="card-title">Category Detail</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-info">
                                    <td>
                                        @Model.Name
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-light my-2">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

