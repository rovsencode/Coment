@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="display:flex;justify-content:center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card my-5">
                <div class="card-body">
                      <div class="text-danger mb-2 mt-3" asp-validation-summary="All"></div>
                    <h4 style="text-align:center" class="card-title">Register</h4>
                    <form asp-controller="Account" asp-action="Register" method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Fullname">FulllName</label>
                            <input class="form-control" asp-for="Fullname" placeholder="Fullname">
                            <span class="text-danger" asp-validation-for="Fullname"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            <input class="form-control" asp-for="Username" placeholder="Username">
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email address</label>
                            <input  class="form-control" asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input class="form-control" asp-for="Password" placeholder="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input class="form-control" asp-for="ConfirmPassword" placeholder="Password">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-check form-check-flat form-check-primary">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
   <partial name="_ValidationPartial" />
}